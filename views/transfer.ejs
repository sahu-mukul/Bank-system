<%- include('./includes/head.ejs')%>
  <body>
    <div class="row">
    <div class="container">
     
     
     <form action="/moneytransfer" method="post">
      <div class="card">
        <div class="card-header">
          Money Transfer
        </div>
        <div class="card-body">
          
            <div class="form-group">
              <label for="exampleFormControlInput1">FROM</label>
              <select class="form-control" id="exampleFormControlSelect1" name="from">
                            
                <% if(data1.length>0){ 
                                    
                  for(var i = 0;i < data1.length;i++) { %>    
                    
                    
                              
                      <option name="from" value="<%=data1[0].account_number%>"><%=data1[0].first_name%></option>             
                     
                    
             <% }
             
              }else{ %>
                 <%=error%>
             <% } %>
                 
                </select>
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">TO</label>
              <select class="form-control" id="exampleFormControlSelect1" name="to">
                            
              <% if(data2.length>0){ 
                                  
                for(var i = 0;i < data2.length;i++) { %>    
                  
                  
                            
                    <option  name="to" value="<%=data2[i].account_number%>"><%=data2[i].first_name%></option>             
                    
           <% }
           
            }else{ %>
               <%=error%>
           <% } %>
               
              </select>
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Money Transfer</label>
              <input type="number" class="form-control" id="exampleFormControlInput1"  name="amount" min=0 value="0" placeholder="Enter Amount Here">
            </div>
  
            
         
        </div>
      </div>
          <button type="submit" class="btn btn-primary btn-sm col-md-1">transfer</button>
          <a href="/negative"> <button type="button" class="btn btn-secondary btn-sm col-md-1">Cancel</button></a> 
    </form>
    
    </div>
   </div>

   <%- include('./includes/end.ejs') %>  


